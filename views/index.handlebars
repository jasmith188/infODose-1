<div id="modal-login" class="modal">
    <div class="modal-content">
        <div class="col-md-4 mx-auto">
            <h1 class="text-center">Log In</h1>
            <form class="alertAppend" id="loginform">
                <div class="form-group">
                    <label for="emailInput">Email address</label>
                    <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="passwordInput">Password</label>
                    <input type="password" class="form-control" id="passwordInput">
                </div>
                <button id="submitBtn" type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br>
        </div>
        <div class="row">
            <div class="col-md-4 mx-auto">
                <h1 class="text-center">Register</h1>
                <form class="alertAppendReg" id="regform">
                    <div class="form-group">
                        <label for="emailInputReg">Email address</label>
                        <input type="email" class="form-control" id="emailInputReg" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        <label for="passwordInputReg">Password</label>
                        <input type="password" class="form-control" id="passwordInputReg">
                    </div>
                    <div class="form-group">
                        <label for="passwordTwoInputReg">Confirm Password</label>
                        <input type="password" class="form-control" id="passwordTwoInputReg">
                    </div>
                    <button id="submitBtnReg" type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="spaceDiv" class="container">
    <div class="row">
        <div class="col-8-md">
            <br>
        </div>
    </div>
</div>
</div>




<script type="text/javascript" src="/js/login.js"></script>

