                        <label for="emailInputReg">Email address</label>
                        <input type="email" class="form-control" id="emailInputReg" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        <label for="passwordInputReg">Password</label>
                        <input type="password" class="form-control" id="passwordInputReg">
                    </div>
                    <div class="form-group">
                        <label for="passwordTwoInputReg">Confirm Password</label>
                        <input type="password" class="form-control" id="passwordTwoInputReg">
                    </div>
                    <button id="submitBtnReg" type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
